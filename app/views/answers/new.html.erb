<%= form_for :answer, url: answers_path do |f| %>
  <p>
    <%= f.label :level %><br>
    <%= f.text_field :level %>
  </p>
  
  <p>
    <%= f.label :value %><br>
    <%= f.text_area :value %>
  </p>
 
  <p>
    <%= f.label :positive %><br>
    <%= f.check_box :positive %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>