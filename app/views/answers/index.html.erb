<h1>Answers</h1>

<%= link_to 'New answer', new_answer_path %>

<table>
  <tr>
    <th>ID</th>
    <th>Level</th>
    <th>Value</th>
	<th>Positive</th>
  </tr>
 
  <% @answers.each do |answer| %>
    <tr>
      <td><%= answer.id %></td>
      <td><%= answer.level %></td>
      <td><%= answer.value %></td>
	  <td><%= answer.positive %></td>
      <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
      <td><%= link_to 'Destroy', answer_path(answer),
    		method: :delete,
    		data: { confirm: 'Are you sure?'}  %></td>
    </tr>
  <% end %>
</table>